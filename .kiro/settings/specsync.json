{
  "auto_remediation": {
    "enabled": true,
    "mode": "auto-fix",
    "description": "Mode options: 'tasks' (generate task list), 'auto-fix' (fully automated fixes)"
  },
  "auto_fix": {
    "enabled": true,
    "require_user_credits": true,
    "create_separate_commit": true,
    "commit_message_template": "ðŸ¤– SpecSync: Auto-fix drift for {original_commit}",
    "amend_original_commit": false,
    "description": "Fully automated mode - Kiro fixes drift and commits automatically"
  },
  "validation": {
    "block_on_drift": false,
    "allow_commit_with_tasks": true,
    "description": "When auto_remediation is enabled, commits can proceed with a tasks file generated"
  },
  "task_generation": {
    "create_in_spec_folder": true,
    "file_name": "remediation-tasks.md",
    "include_priority": true,
    "include_timestamps": true
  },
  "notification": {
    "show_task_summary": true,
    "open_tasks_file": false,
    "notify_on_auto_fix": true
  },
  "git": {
    "preserve_original_commit": true,
    "create_fixup_commit": false,
    "auto_push": false,
    "description": "Git behavior for auto-fix mode"
  }
}
